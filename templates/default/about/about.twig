{% set bodyClass = 'about' %}

{% if entry.seoTitle | length %}
{% set seoTitle = entry.seoTitle %}
{% else %}
{% set seoTitle = entry.title %}
{% endif %}

{% if entry.seoDescription | length %}
{% set seoDescription = entry.seoDescription %}
{% endif %}

{% extends "_layouts/site" %}

{% block navigation %}
{% include "_includes/global/navigation--full" %}
{% endblock %}


{% block main %}
<div class="grid-container">

      <div class="grid-x grid-padding-x grid-padding-y align-center">
        <div class="small-12 medium-8 large-6 cell text-center">
          <div class="dark-gray small text-uppercase sans-regular letter-spacing--loose padding-bottom-1">About</div>
          {{entry.copy}}
        </div>
      </div>


      <div class="grid-x grid-padding-x align-center">
        <div class="small-12 medium-8 cell text-center">
          <div class="dark-gray small text-uppercase sans-regular letter-spacing--loose padding-bottom-1">Team</div>
        </div>
      </div>

      <div class="grid-x grid-padding-x grid-padding-y align-center">
        {% for person in entry.people.all()  %}
        <div class="small-12 medium-6 large-4 cell text-center">
          <h5>{{ person.person }}</h5>
          <p>{{ person.department }}</p>
        </div>
        {% endfor %}
      </div>

</div>


{% endblock %}

{% block footer %}
{% include "_includes/global/footer" %}
{% endblock %}